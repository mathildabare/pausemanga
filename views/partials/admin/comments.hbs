Partial : Comments
--}}

<section class="admin-blog" id="comments">
    <div class="container">
        <div class="row">
            <h3><i class="fas fa-comment-dots"></i> Comments</h3>
        </div>
    </div>


        {{!-- Comments --}}

    <div class="container">
        <form action="/admin/comments/{{ id }}">
            <div class="row">

                {{#each comments}}

                <div class="col-md-3 mb-3">
                    <div class="messages" style="height: 100%; background-color : rgb(231, 227, 227)">

                        <div class="row mt-3">


                            <div class="mangas">
                                <h3>{{ title }}</h3>
                            </div>

                            <div class="users">
                               <img src="/assets/images/Users/{{ avatar }}" alt="">
                               <p>{{ username }}</p>
                            </div>

                        </div>

                        <div class="row mt-5">
                            <blockquote>
                                <cite> " {{content}} " </cite>
                            </blockquote>
                        </div>

                        <div class="gst-icons mt-2 mb-3">

                            <button type="button" class="btn-gestion" style="background-color : rgb(231, 227, 227)" data-bs-toggle="modal"
                                data-bs-target="#delete-comment-modal-{{ id }}">
                                <i class="fas fa-trash-alt"></i>
                            </button>

                        </div>
                    </div>
                </div>

                {{> modals/comments }}


                {{/each}}
            </div>

        </form>
    </div>
</section>