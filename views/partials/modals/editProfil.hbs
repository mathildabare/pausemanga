{{!-- Modal --}}
<div class="modal fade" id="edit-profile-modal-{{ user.id }}" tabindex="-1" aria-labelledby="edituserlabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Edit Profile</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="connection d-flex justify-content-center flex-column">
                    <div class="mb-3 element-form">

                        <form action="/admin/{{ user.id }}?_method=PUT" method="post" enctype="multipart/form-data">

                            <label for="username" class="form-label mt-4 txt-center">Username</label>
                            <input class="form-control form-control-sm" type="text" name="username" value="{{ user.username }}">

                            <label for="avatar" class="form-label mt-4 txt-center">Avatar</label>
                            <input class="form-control form-control-sm" type="file" name="avatar">

                            <label for="biography" class="form-label mt-4 txt-center">Biography</label>
                            <textarea class="brd-txt-area" name="biography" value="{{ user.biography }}" cols="30"
                                rows="10" placeholder=" Write a biography . . ."></textarea>

                            <div class="modal-footer">
                                <button type="button" class="btn-off  float-end" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn-on float-end">Confirm</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>