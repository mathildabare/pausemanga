{{!-- Comment Delete --}}

<div class="modal fade" id="delete-comment-modal-{{ id }}" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
            <div class="modal-content">

                  <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                        Delete this comment ?
                  </div>
                  <div class="modal-footer">

                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                        {{!-- <a href="/admin/message/{{id}}" class="btn btn-primary"> Confirm </a> Get --}}

                        <form action="/admin/messages/{{ id }}?_method=DELETE" method="post">
                              <button type="submit" class="btn btn-primary">Confirm</button>
                        </form> {{!-- Form Post method override --}}
                  </div>
            </div>
      </div>
</div>