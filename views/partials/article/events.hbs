<style>
      .all-cards {
            background-color: white
      }

      .card-details {
            background-color: rgb(221, 221, 221);
            padding: 30px 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.6);
            margin-bottom: 20px;
            text-align: center;
      }

      .card-details:hover {
            transform: translateY(20px);
            background-color: rgb(240, 239, 239);
            transition: all 0.5s;
      }

      .card-details img {
            display: block;
            margin: 0 auto;
            width: 70%;
      }

      .card-details h4 {
            font-size: 100%;
      }

      .card-details h5 {
            font-size: 80%;
            font-weight: 300;
      }

      .card-details img {
            width: 80%;
            height: auto;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
      }


      .pages {
            margin-top: 40px;
      }

      .pages a {
            color: black;
      }

</style>


<section class="cards">
      <div class="all-cards container">
            <div class="row" id="listCard">

                  {{#each articles}}

                  <a class="col-md-3 btn-card" href="/article/{{ id }}">
                        <div class="card-details">
                              <img class="card-img-top" src="/assets/images/Articles/{{ img }}">
                              <div class="card-body">
                                    <h4 class="card-title">{{ title }}</h4>
                                    <hr>
                                    <h5>{{ genre_1}}, {{ genre_2 }}</h5>
                              </div>
                        </div>
                  </a>

                  {{/each}}

                  <div class="col-md-3 mb-3">
                        <div class="card-details">

                              <button type="submit" class="btn" data-bs-toggle="modal"
                                    data-bs-target="#create-article-modal-user"><i class="fas fa-plus"></i>
                              </button>
                        </div>
                  </div>
            </div>
      </div>
    


{{!-- Modal --}}

<div class="modal fade" id="create-article-modal-user" tabindex="-1" aria-labelledby="edituserlabel" aria-hidden="true">
      <div class="modal-dialog">
            <div class="modal-content">
                  <div class="modal-header">
                        <h4>Add an article</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>

                  <form action="/article" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                              <div class="connection d-flex justify-content-center flex-column">
                                    <div class="mb-3 element-form">
                                          <label for="input-title" class="form-label"></label>
                                          <input name="title" type="text" class="form-control" id="input-title"
                                                placeholder="Title">
                                    </div>

                                    <div class="mb-3">
                                          <label for="formFileSm" class="form-label"></label>
                                          <input class="form-control form-control-sm" name="img" type="file">
                                    </div>
                                    <label class="form-label">Genre 1</label>
                                    <select name='genre_1' class="form-select">
                                          <option value="" disabled selected> . . . . .</option>
                                          <option>Shonen</option>
                                          <option>Seinen</option>
                                          <option>Fantastic</option>
                                          <option>Super-Heroes</option>
                                          <option>Horror</option>
                                          <option>Shojo</option>
                                          <option>Demons</option>
                                          <option>Comedy</option>
                                    </select>
                                    <label class="form-label">Genre 2</label>
                                    <select name='genre_2' class="form-select">
                                          <option value="" disabled selected> . . . . .</option>
                                          <option>Shonen</option>
                                          <option>Seinen</option>
                                          <option>Fantastic</option>
                                          <option>Super-Heroes</option>
                                          <option>Horror</option>
                                          <option>Shojo</option>
                                          <option>Demons</option>
                                          <option>Comedy</option>
                                    </select>
                                    <div class="mb-3 element-form mt-4">
                                          <label for="input-email" class="form-label"></label>
                                          <textarea class="brd-txt-area" name="synopsis" id="textareaArticle" cols="45"
                                                rows="10" placeholder=" Write an article . . ."></textarea>
                                    </div>
                              </div>
                        </div>
                        <div class="modal-footer">
                              <button type="button" class="btn btn-off" data-bs-dismiss="modal">Cancel</button>
                              <button type="submit" class="btn btn-on">Confirm</button>
                        </div>
                  </form>

            </div>
      </div>
</div>

